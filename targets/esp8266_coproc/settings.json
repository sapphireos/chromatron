
{

    "TOOLCHAIN": "XTENSA",

    "LOG_FILENAME": "build.log",

    "C_FLAGS": [
        "-std=gnu99",
        "-Wno-pointer-arith",
        "-Wl,-EL", 
        "-fno-inline-functions",
        "-nostdlib",
        "-Os",
        "-g3",
        "-Wall",
        "-fno-strict-aliasing",
        "-Wno-unused",
        "-Wno-main",
        "-Wno-unknown-pragmas",
        "-Wno-pointer-sign",
        "-Wno-format",
        "-mlongcalls",
        "-mtext-section-literals",
        "-falign-functions=4",
        "-U__STRICT_ANSI__",
        "-ffunction-sections",
        "-fdata-sections", 
        "-fno-exceptions",
        "-fno-builtin-printf",
        "-DPLATFORMIO=30605",
        "-DESP8266",
        "-DCHROMATRON_ESP8266",
        "-DF_CPU=80000000L",
        "-D__ets__", 
        "-DICACHE_FLASH",
        "-DENABLE_COPROCESSOR",
        "-Iinclude",
        "-I%(BASE_DIR)/src/hal/esp8266/sdk/include",
        "-I%(BASE_DIR)/src/hal/esp8266/sdk/extra_include",
        "-I%(BASE_DIR)/src/hal/esp8266/sdk/driver_lib/include",
        "-I%(BASE_DIR)/src/hal/esp8266/sdk/include/espressif",
        "-I%(BASE_DIR)/src/hal/esp8266/sdk/include/lwip",
        "-I%(BASE_DIR)/src/hal/esp8266/sdk/include/lwip/ipv4",
        "-I%(BASE_DIR)/src/hal/esp8266/sdk/include/lwip/ipv6",
        "-I%(BASE_DIR)/src/hal/esp8266/sdk/include/nopoll",
        "-I%(BASE_DIR)/src/hal/esp8266/sdk/include/ssl",
        "-I%(BASE_DIR)/src/hal/esp8266/sdk/include/json",
        "-I%(BASE_DIR)/src/hal/esp8266/sdk/include/openssl"
    ],

    "AR_FLAGS": [
        "-rcs"
    ],

    "LINK_FLAGS": [
        "--output %(TARGET_DIR)/main.elf",
        "-Wl,-Map=%(TARGET_DIR)/main.map,--cref",
        "-nostdlib",
        "-Wl,--no-check-sections", 
        "-Wl,-static -Wl,--gc-sections", 
        "-u call_user_start", 
        "-u _printf_float",
        "-u _scanf_float",
        "-Wl,--section-start=.bootdata=0x3FFE8000",
        "-L%(BASE_DIR)/src/hal/esp8266/sdk/lib",
        "-L%(BASE_DIR)/targets/esp8266",
        "-Wl,--start-group",
        "-lairkiss",
        "-lc",
        "-lcrypto",
        "-lespnow",
        "-lgcc",
        "-ljson",
        "-llwip",
        "-lmain",
        "-lmbedtls",
        "-lnet80211",
        "-lphy",
        "-lpp",
        "-lpwm",
        "-lsmartconfig",
        "-lssl",
        "-lupgrade",
        "-lwpa",
        "-lwpa2",
        "-lwps",
        "-lm",
        "-Wl,--end-group",
        "-T %(LINKER_SCRIPT)",
        "-Wl,--gc-sections",
        "-Wl,--relax"
    ],

    "LINKER_SCRIPT": "eagle.app.v6.ld",

    "OBJ_DIR": "obj",
    "DEP_DIR": "dep",

    "CLEAN_FILES": [
        ".hex",
        ".bin",
        ".eep",
        ".cof",
        ".elf",
        ".map",
        ".sym",
        ".lss",
        ".a"
    ],

    "CLEAN_DIRS": [
        "obj",
        "dep"
    ],

    "OS_PROJECT": "sapphire",

    "FW_INFO_ADDR": "0x00010000",
    "FW_START_OFFSET": "0x00002000",

    "BUILD_NUMBER_FILE": "buildnumber.txt",

    "_comment": "Additional libraries to include with the build",
    "LIBRARIES": ["hal_esp8266"]
}
